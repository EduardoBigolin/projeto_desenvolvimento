generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  isAdmin      Boolean  @default(false)
  photoFile    String
  birthDate    String
  coursesId    String
  Courses      Courses? @relation(fields: [coursesSigla], references: [sigla])
  coursesSigla String?
}

model Courses {
  sigla String  @id
  name  String
  year  Int
  Users Users[]
}
